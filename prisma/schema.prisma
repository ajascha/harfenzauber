generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model HfzPost {
  id         Int       @id @default(autoincrement())
  title      String
  content    String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  slug       String?   @unique

  @@map("hfz_posts")
}

model HfzEvent {
  id                        Int       @id @default(autoincrement())
  title                     String
  description               String
  image_url                 String?
  starts_at                 DateTime  @db.Date
  address                   String
  created_at                DateTime? @default(now()) @db.Timestamp(6)
  registration_url          String?
  subtitle                  String?
  time_text                 String?
  venue_name                String?
  price_text                String?
  show_contact_registration Boolean   @default(false) @map("showContactRegistration")

  @@map("hfz_events")
}

model events {
  id                      Int      @id @default(autoincrement())
  title                   String
  description             String
  imageUrl                String?
  startsAt                DateTime @db.Date
  address                 String
  createdAt               DateTime @default(now())
  registrationUrl         String?
  subtitle                String?
  timeText                String?
  venueName               String?
  priceText               String?
  showContactRegistration Boolean  @default(false)
}

model posts {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  slug      String?  @unique
}

model pricing {
  id          Int       @id @default(autoincrement())
  key         String
  value       Decimal   @db.Decimal(10, 2)
  currency    String    @default("EUR")
  description String?
  validFrom   DateTime  @default(now())
  validUntil  DateTime?
  createdAt   DateTime  @default(now())
  createdBy   String?

  @@index([key, validFrom])
}
